{
  "name": "yasiru",
  "displayName": "Live Server",
  "description": "A simple live development server with live reload",
  "version": "0.0.2",
  "publisher": "yasiru",
  "icon": "images/logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/yasirunadeesha/Live-Server-vscode-extenson.git"
  },
  "bugs": {
    "url": "https://github.com/yasirunadeesha/Live-Server-vscode-extenson/issues"
  },
  "homepage": "https://github.com/yasirunadeesha/Live-Server-vscode-extenson#readme",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "liveServer.start",
        "title": "Live Server: Open with Live Server"
      },
      {
        "command": "liveServer.stop",
        "title": "Live Server: Stop Live Server"
      }
    ],
    "keybindings": [
      {
        "command": "liveServer.start",
        "key": "ctrl+shift+l ctrl+shift+o",
        "mac": "cmd+shift+l cmd+shift+o"
      },
      {
        "command": "liveServer.stop",
        "key": "ctrl+shift+l ctrl+shift+c",
        "mac": "cmd+shift+l cmd+shift+c"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "resourceExtname == .html || resourceExtname == .htm",
          "command": "liveServer.start",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "when": "resourceExtname == .html || resourceExtname == .htm",
          "command": "liveServer.start",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Live Server",
      "properties": {
        "liveServer.port": {
          "type": "number",
          "default": 5500,
          "description": "Set Custom Port Number of Live Server"
        },
        "liveServer.browser": {
          "type": "string",
          "default": "",
          "description": "Custom browser path to open Live Server in"
        },
        "liveServer.root": {
          "type": "string",
          "default": "/",
          "description": "Set Custom root of Live Server"
        },
        "liveServer.https": {
          "type": "boolean",
          "default": false,
          "description": "Enable HTTPS"
        },
        "liveServer.cors": {
          "type": "boolean",
          "default": true,
          "description": "Enable CORS"
        },
        "liveServer.proxy": {
          "type": "object",
          "default": {},
          "description": "Configure proxy settings"
        },
        "liveServer.ignoreFiles": {
          "type": "array",
          "default": [
            ".git",
            ".vscode",
            "node_modules"
          ],
          "description": "Files to ignore for live reload"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "dependencies": {
    "express": "^4.21.1",
    "chokidar": "^3.6.0",
    "ws": "^8.18.0",
    "open": "^10.1.0",
    "cors": "^2.8.5",
    "http-proxy": "^1.18.1"
  },
  "devDependencies": {
    "@types/vscode": "^1.105.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/express": "^4.17.21",
    "@types/ws": "^8.5.10",
    "@types/cors": "^2.8.17",
    "@types/http-proxy": "^1.17.14",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.36.0",
    "typescript": "^5.9.3",
    "ts-loader": "^9.5.4",
    "webpack": "^5.102.0",
    "webpack-cli": "^6.0.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
